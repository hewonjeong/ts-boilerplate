{
  "name": "ts-boilerplate",
  "version": "0.0.1",
  "description": "ğŸ£ Tiny TypeScript + Node.js boilerplate",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev ./src/index.ts",
    "build": "tsc",
    "serve": "node build/index.js",
    "start": "npm run serve",
    "test": "jest",
    "test:watch": "jest --watch",
    "prettify": "prettier --write './src/**/*.{ts,tsx}'"
  },
  "author": "Hewon Jeong",
  "license": "ISC",
  "repository": "https://github.com/HewonJeong/ts-boilerplate.git",
  "devDependencies": {
    "@types/jest": "^25.1.2",
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "ts-jest": "^25.2.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "tslint": "^6.0.0",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.7.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test"
    }
  },
  "lint-staged": {
    "*.{ts,js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
